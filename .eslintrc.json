{
  "plugins": ["testing-library", "jest-dom"],
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "rules": {
    "testing-library/no-render-in-setup": [
      "error",
      { "allowTestingFrameworkSetupHook": "beforeEach" }
    ]
  }
}
